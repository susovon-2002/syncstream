/**
 * @fileoverview Updated Firestore Security Rules for SyncStream.
 *
 * This ruleset allows all authenticated users (including anonymous guests) to
 * participate in rooms, chat, and media sharing to ensure a seamless "watch party" experience.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     */
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if false;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Controls access to rooms and all their subcollections.
     * Open to all signed-in users for prototyping simplicity and frictionless joining.
     */
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;

      match /{allSubcollections=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}